# ==========================================
# VoxPop - Variaveis de Ambiente
# ==========================================
# Copie este arquivo para .env e configure os valores

# ==========================================
# Django
# ==========================================
SECRET_KEY=your-super-secret-key-change-in-production-min-50-chars
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,localhost:8080,localhost:5173

# ==========================================
# Banco de Dados
# ==========================================
DB_NAME=voxpop_db
DB_USER=voxpop
DB_PASSWORD=voxpop_secret
DB_HOST=db
DB_PORT=5432

# URL completa (alternativa)
# DATABASE_URL=postgres://voxpop:voxpop_secret@db:5432/voxpop_db

# ==========================================
# Redis
# ==========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# ==========================================
# Evolution API (WhatsApp)
# ==========================================
EVOLUTION_API_URL=https://evolution.tratto.solutions

# ==========================================
# Frontend
# ==========================================
VITE_API_URL=http://localhost:8000/api/v1
FRONTEND_URL=http://localhost:5173

# ==========================================
# CORS
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# Email (Desenvolvimento - Mailhog)
# ==========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False

# Email (Producao - SMTP)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu-email@gmail.com
# EMAIL_HOST_PASSWORD=sua-senha-de-app

# ==========================================
# Superusuario (criado automaticamente)
# ==========================================
DJANGO_SUPERUSER_EMAIL=admin@voxpop.com.br
DJANGO_SUPERUSER_PASSWORD=admin123

# ==========================================
# Docker / Producao
# ==========================================
DOCKER_REGISTRY=lpcoutinho
VERSION=1.0.0
DOMAIN=voxpop.example.com

# ==========================================
# Celery
# ==========================================
CELERY_TASK_ALWAYS_EAGER=False
CELERY_WORKER_CONCURRENCY=4

# ==========================================
# Logs
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# Sentry (Producao)
# ==========================================
SENTRY_DSN=

# ==========================================
# Base URL (para webhooks)
# ==========================================
BASE_URL=http://localhost:8000

# ==========================================
# Tenant (Multi-tenant)
# ==========================================
PUBLIC_SCHEMA_URLCONF=config.urls_public
TENANT_SCHEMA_URLCONF=config.urls
