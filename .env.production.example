# ==========================================
# Django - Configurações de Segurança
# ==========================================
# Chave secreta - GERE UMA NOVA COM PELO MENOS 128 CARACTERES
SECRET_KEY_BASE=altere_por_uma_chave_secreta_aleatoria_minimo_128_caracteres

# Domínios permitidos
ALLOWED_HOSTS=voxpop.tratto.solutions,www.voxpop.tratto.solutions

# ==========================================
# Banco de Dados PostgreSQL
# ==========================================
POSTGRES_DATABASE=voxpop_prod
POSTGRES_USERNAME=voxpop
POSTGRES_PASSWORD=senha_segura_banco_aqui
POSTGRES_HOST=voxpop_postgres

# ==========================================
# Redis - Cache e Fila
# ==========================================
REDIS_URL=redis://voxpop_redis:6379/0
CELERY_BROKER_URL=redis://voxpop_redis:6379/1

# ==========================================
# Evolution API (WhatsApp)
# ==========================================
EVOLUTION_API_URL=https://evolution.tratto.solutions
EVOLUTION_API_KEY=C255C70B21CF-44BE-9473-301504BCA0C4

# ==========================================
# Email SMTP - Configurações Produção
# ==========================================
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@dominio.com
SMTP_PASSWORD=sua_senha_de_app_gmail
SMTP_DOMAIN=gmail.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=peer

MAILER_SENDER_EMAIL=seu_email@dominio.com

# ==========================================
# Frontend e URLs
# ==========================================
FRONTEND_URL=https://voxpop.tratto.solutions
VITE_API_URL=https://voxpop.tratto.solutions/api

# ==========================================
# CORS - Apenas produção
# ==========================================
CORS_ALLOWED_ORIGINS=https://voxpop.tratto.solutions,https://www.voxpop.tratto.solutions

# ==========================================
# Configurações Gerais
# ==========================================
ENVIRONMENT=production
NODE_ENV=production
RAILS_ENV=production
INSTALLATION_ENV=docker
RAILS_LOG_TO_STDOUT=true

# ==========================================
# Backup e Logs
# ==========================================
LOG_LEVEL=ERROR
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==========================================
# Superusuário
# ==========================================
DJANGO_SUPERUSER_EMAIL=admin@voxpop.tratto.solutions
DJANGO_SUPERUSER_PASSWORD=senha_admin_segura_aqui